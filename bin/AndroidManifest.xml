<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.edu.ntut.game.flower"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application

        android:label="@string/str_app_name"
        android:theme="@style/AppTheme" android:icon="@drawable/ic_flower">
        <activity
            android:name=".GameReady"
            android:label="@string/str_app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="GameRunning"
                  android:screenOrientation="landscape"></activity>
        <activity android:name="GameOver"
                  android:screenOrientation="landscape"></activity>
        <activity android:name="Setting"
                  android:screenOrientation="landscape"></activity>
        <activity android:name="Help"
                  android:screenOrientation="landscape"></activity>
    </application>

</manifest>